<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center">

  <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
    <TextView android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
              android:text="Hello, Lazy Gallery!" />
  </LinearLayout>


  <LinearLayout android:id="@+id/lazy_gallery_layout"
                android:layout_width="fill_parent"
                android:layout_height="225px"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/photo_bg">
    <Gallery android:id="@+id/lazy_gallery"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:spacing="15dp"
             android:unselectedAlpha="0.5" />
    <TextView android:id="@+id/lazy_gallery_text"
              android:layout_width="wrap_content"
              android:layout_height="20dp"
              android:layout_marginTop="5dp"
              android:lines="1"
              android:textSize="13sp"
              android:gravity="center"
              android:textColor="@android:color/black" />
  </LinearLayout>
  
</LinearLayout>